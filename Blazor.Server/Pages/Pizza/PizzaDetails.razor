@page "/pizza/{Id:int}"

@inject IPizzaService PizzaService

<div class="media">
    <div class="media-img-big-wrapper mr-2">
        <img class="media-img-big" src="@pizza.ImagePath" alt="@pizza.ImageName" />
    </div>
    <div class="media-body">
        <h2 class="mb-0">@pizza.Name</h2>
        <p>@pizza.Description</p>
@*        @if (pizza.Variants != null && pizza.Variants.Count > 1)
        {
            <div class="form-group">
                <select class="form-control" @bind="currentEditionId">
                    @foreach (var variant in pizza.Variants)
                    {
                        <option value="@variant.EditionId">@variant.Edition.Name</option>
                    }
                </select>
            </div>
        }*@
        <h4 class="price">
            $ @pizza.Price
        </h4>
    </div>
    <br/>
    <div>
        <NavLink class="nav-link" href="pizza">
            <span class="oi oi-list-rich" aria-hidden="true"></span> Go Back
        </NavLink>
    </div>
</div>

@code {
    private PizzaResponse pizza = new();
    private int currentEditionId = 1;

    [Parameter]
    public int Id { get; set; }

    protected override void OnParametersSet()
    {
        if (Id != 0)
        {
            pizza = PizzaService.GetPizza(Id);            
        }
    }
}
